<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    tools:context=".AboutActivity">

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:textDirection="rtl"
                android:text="אפליקציית ChemistryApp\n\nהאפליקציה נוצרה על ידי תומר בן ארי מכיתה יא5, בית הספר הרב תחומי רמות באר שבע, ובעזרת המורים דורית פלקוביץ' ואלברט ולוי.\n\nהמידע ותמונות השונות באפליקציה נלקחו מהאתר ויקיפדיה - האנציקלופדיה החופשית.\n\nהסרטונים אליהם מעבירים הקישורים השונים שייכים לבעלי הסרטון שהעלו אותו ליוטיוב."
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />
</LinearLayout>